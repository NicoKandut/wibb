<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="6dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/offer_card">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/offer_card_beer_img_container"
                android:layout_width="65dp"
                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/offer_card_beer_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_beer_black_24dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp">

                </ImageView>
            </FrameLayout>

            <ImageView
                android:id="@+id/offer_card_gradient"
                android:layout_width="20dp"
                android:layout_height="80dp">
            </ImageView>

            <ImageView
                android:id="@+id/offer_card_store_img"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_shopping_cart_black_24dp">
            </ImageView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_marginStart="155dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/offer_card_inner_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/offer_card_date_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:scaleType="fitCenter"
                android:fontFamily="sans-serif-light"
                android:text="@string/offer_card_date_default"
                android:textSize="15sp"
                android:layout_weight="1">

            </TextView>

            <TextView
                android:id="@+id/offer_card_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:scaleType="fitCenter"
                android:layout_marginEnd="10dp"
                android:text="@string/addoff_price_default"
                android:textSize="35sp"
                android:fontFamily="sans-serif-light"
                android:layout_weight="0">
            </TextView>

            <ImageButton
                android:id="@+id/offer_card_menu_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:layout_weight="0">

            </ImageButton>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>
