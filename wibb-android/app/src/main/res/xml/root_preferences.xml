<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/settings_header_global"
        app:iconSpaceReserved="false"
        app:isPreferenceVisible="false">

        <EditTextPreference
            app:key="apiurl"
            app:title="@string/settings_global_apiurl"
            app:useSimpleSummaryProvider="true"
            app:iconSpaceReserved="false"
            app:isPreferenceVisible="true"
            app:enabled="true"
            app:defaultValue="https://wibb.host"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Favourites"
        app:iconSpaceReserved="false"
        app:isPreferenceVisible="true">

        <Preference
            app:key="favb"
            app:title="Edit Beer Favourites"
            app:summary="The app will only show beers and offers marked as favourite."
            app:iconSpaceReserved="false">

            <intent
                android:targetPackage="com.spogss.wibb"
                android:targetClass="com.spogss.wibb.FavouriteBeerPreferences"/>

        </Preference>

        <Preference
            app:key="favs"
            app:title="Edit Store Favourites"
            app:summary="The app will only show stores and offers marked as favourite."
            app:iconSpaceReserved="false">

            <intent
                android:targetPackage="com.spogss.wibb"
                android:targetClass="com.spogss.wibb.FavouriteStorePreferences"/>

        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/settings_header_feedback"
        app:iconSpaceReserved="false">

        <Preference
            app:key="pref_req_new_beer"
            app:title="@string/settings_feedback_label"
            app:summary="@string/settings_feedback_suggestion"
            app:iconSpaceReserved="false">

            <intent
                android:targetPackage="com.spogss.wibb"
                android:targetClass="com.spogss.wibb.RequestNewContentActivity"/>

        </Preference>


    </PreferenceCategory>

</PreferenceScreen>
